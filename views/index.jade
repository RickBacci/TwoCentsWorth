doctype html
html(lang='en')
  head
    title TwoCentsWorth
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    <!-- TODO: Need to figure out how to set this up -->
    <!-- link(rel="stylesheet", href="../node_modules/bootstrap/dist/css/bootstrap.min.css") -->
    style.
      .btn-choice:active, .active {
        background-color:blue;
      }
      body {
          background-color: #c9c9c9;
      }
  body
    .container-fluid
      .row
        .col-md-8.col-md-offset-2
          nav.navbar.navbar-inverse
            .container-fluid
              .navbar-header
                a.navbar-brand(href='/') TwoCentsWorth
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='/') Home
          h1.text-center TwoCentsWorth
          <!-- TODO Add feature to have a variable number of choices -->
          form.form(action='/polls', method='post', role='form')
            .form-group
              label(for='poll-type') Select poll type:
              select#poll-type.form-control(name='polltype')
                option Public
                option Anonymous
            .form-group
              input#endtime.form-control(type='time', name='endtime', placeholder='Enter poll end time')
            .form-group
              input#question.form-control(name='question', placeholder='Enter poll question')
            .form-group
              input#choice-A.form-control(name='poll[choices][]', placeholder='Enter choice')
            .form-group
              input#choice-B.form-control(name='poll[choices][]', placeholder='Enter choice')
            .form-group
              input#choice-C.form-control(name='poll[choices][]', placeholder='Enter choice')
            .form-group
              input#choice-D.form-control(name='poll[choices][]', placeholder='Enter choice')
            button#submit-poll.btn.btn-default.pull-right(type='submit') Submit Poll
    <!-- script(src='/socket.io/socket.io.js') -->
    script(src='/client.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
